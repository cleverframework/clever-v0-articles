extends ../../../system/views/admin/layout/admin

block appendcss
  link(rel='stylesheet', href='/public/files/vendor/jquery-ui/themes/cupertino/jquery-ui.min.css')
  link(rel='stylesheet', href='/public/files/vendor/jquery-ui/themes/cupertino/theme.css')
  link(rel='stylesheet', href='/public/system/vendor/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css')
  link(rel='stylesheet', href='/public/system/admin/index.css')
  link(rel='stylesheet', href='/public/#{packageName}/admin/index.css')

block content
  
  form#editPage.row.js-article-edit(method="PUT", action="/api/#{packageName}/#{pageToEdit._id}", autocomplete="off", data-id="#{pageToEdit._id}")
    .col-sm-8.col-main
      
      div#editPageError.js-errors(class="alert alert-danger hidden", role="alert")
        b
          |	Oops! 
        span.message.js-msg
          | No Errors
  
      a.text-capitalize(href='/admin/#{packageName}') #{packageName}
      h1.page-header!=pageToEdit.title
        
      .form-group
        label(for="inputTitle") Title
        input#inputTitle.form-control.js-title(type="text", name="title", value!=pageToEdit.title, placeholder="")
      .form-group
        label(for="inputSlug") Slug
        input#inputSlug.form-control.js-slug(type="text", name="slug", value!=pageToEdit.slug, placeholder="")
      .form-group
        label(for="inputStandfirst") Standfirst 
        textarea#inputStandfirst.form-control(name="standfirst")=pageToEdit.standfirst
      .row
        .col-sm-6
          .form-group
            label(for="inputStart") Start 
            input#inputStart.form-control.js-datetime(type="text", name="start", value!=pageToEdit.start_format, placeholder="dd/mm/yyyy hh:mm:ss")
        .col-sm-6
          .form-group
            label(for="inputEnd") End 
            input#inputEnd.form-control.js-datetime(type="text", name="end", value!="#{pageToEdit.end_format || ''}", placeholder="dd/mm/yyyy hh:mm:ss")
        
      div.row.placeholders
      
      h2.h3 Body
      
      .js-blocks.blocks(data-blocks=JSON.stringify(pageToEdit.blocks || []))
        include blocks/add
        .js-container.blocks-container
      
        
      input#inputCsrf(type="hidden", name="_csrf", value="#{csrfToken}")
      
            
    .sidebar-right
      button#editPageBtn.btn.btn-lg.btn-success.btn-block.js-save(type="submit", style="margin-bottom: 15px;") Save
      
      .btn-group.sidebar-buttons
        button.btn.btn-default.js-unpublish(type="button", class=(!pageToEdit.published) ? 'active' : '') Draft
        button.btn.btn-default.js-publish(type="button", class=(pageToEdit.published) ? 'active': '') Published
          
      hr
      .text-right
        a.text-danger.js-delete(href="#", data-id="#{pageToEdit._id}") Delete article

block appendjs
  script.
    window.urlreload = '/admin/pages';
    window.csrf = '#{csrfToken}';
    window.packageName = '#{packageName}'
    window.imageList = JSON.parse('!{imageList}');
    window.galleryList = JSON.parse('!{galleryList}');
    $(function() {
      $pageBlocks = $('#pageBlocks');
      $pageBlocks.sortable();
      $pageBlocks.disableSelection();
    });
  script(src="/public/files/vendor/jquery-ui/jquery-ui.min.js")
  script(src="/public/system/vendor/moment/min/moment.min.js")
  script(src="/public/system/vendor/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")
  script(src="/public/#{packageName}/admin/index.js")
