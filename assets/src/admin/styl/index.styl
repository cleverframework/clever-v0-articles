.custom-combobox
  position relative
  display inline-block

.custom-combobox-toggle
  position absolute
  top 0
  bottom 0
  margin-left -1px
  padding 0

.custom-combobox-input
  margin 0
  padding 5px 10px

.col-main
  padding-top: 11px

.page-header
  margin-bottom: 40px
  margin-top: 0
  border: 0

.sidebar-right
  position fixed
  width: 26%
  top 51px
  bottom 0
  right 0
  padding: 30px 30px
  z-index 1000
  display block
  // padding 20px
  overflow-x hidden
  overflow-y auto
  background-color #f5f5f5
  border-left 1px solid #eee

.sidebar-buttons
  width: 100%
  .btn
    width: 50%

.page-header .fa-stack
  margin-left: 10px
  font-size: 14px
  vertical-align: -3px

.blocks-list
  margin-left: -10px

.block-list__item
  width: 33%
  float: left
  margin-bottom: 10px
  padding-left: 10px

  .btn
    width: 100%


.btn-add-block
  margin-bottom: 20px

.blocks
  overflow: hidden

.block
  overflow: hidden
  &:not(:hover)
    .panel
      border-color: #eee


.block-header
  padding: 0 10px
  height: 34px
  cursor: move
  &:hover
    background-color: #eee
    .fa-sort
      color: #666

  .fa-sort
    display: inline-block
    color: #ccc
    // width: 35px
    line-height: 34px

  .btn
    margin-top: 6px

.text-editor
  height: 200px
  overflow: hidden
  h2
    font-size: 20px

.text-editor-toolbar
  margin-top: -10px
  margin-bottom: 5px
  .btn-group:not(:last-child)
    margin-right: 10px


.image-picker__container
  max-height: 400px
  overflow: auto

.image-picker__thumb
  cursor: pointer

.image-picker__thumb.is-selected
  background-color: #0088cc
